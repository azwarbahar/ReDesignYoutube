<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:background="@color/putih"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/img_poster_item_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/opm" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/azz"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="5dp"
                        app:civ_border_color="@color/putih"
                        app:civ_border_width="3dp" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title_item_top"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_item_img"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="JUDUL" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_item_top"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:text="Muhammad Azwar Bahar"
                android:textColor="@color/abuabu"
                android:textSize="12dp" />








        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>