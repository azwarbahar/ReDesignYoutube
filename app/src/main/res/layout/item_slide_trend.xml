<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_width="335dp"
        android:layout_height="260dp"
        android:background="@color/putih"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/img_poster_item_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/opm"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title_item_top"
                android:text="JUDUL"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_below="@id/cv_item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/durasi"
                android:layout_below="@id/title_item_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/abuabu"
                android:textSize="12dp"
                android:layout_marginHorizontal="15dp"
                android:text="35 M | 1 Nov 2019"/>

            <View
                android:id="@+id/view_item_top"
                android:layout_marginTop="10dp"
                android:background="@color/abuabutrans"
                android:layout_below="@id/durasi"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/view_item_top"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/azz"
                android:layout_marginHorizontal="15dp"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/nama_item_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Azwar Bahar"
                android:textSize="15dp"
                android:layout_toRightOf="@id/profile_image"
                android:layout_below="@id/view_item_top"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>

            <TextView
                android:id="@+id/subs"
                android:layout_below="@id/nama_item_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/abuabu"
                android:textSize="12dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="2,33 M Subscriber"/>

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/btn_subs"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>